#!/bin/bash

echo -e "Checking branch name..."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'main' ]
then
  echo -e "\nðŸš« Commit directly to main branch is not allowed!"
fi

if [ $branchName == 'develop' ]
then
  echo -e "\nðŸš« Cannot push to remote develop branch, please create your own branch and send a PR"
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name\n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name\n" && exit 1
fi

echo -e ">> Finish checking branch name"

exit 0
