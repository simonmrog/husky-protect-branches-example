#!/bin/bash

echo -e "Checking branch name..."

BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(main|develop)"

if [[ $1 != *"$BRANCH"* ]]
then
  echo -e "\nðŸš« You must use (git push origin $BRANCH)\n" && exit 1
fi

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
  echo -e "\nðŸš« Cannot push to remote $BRANCH branch, please create your own branch and send a PR"
fi

echo -e ">> Finish checking branch name"

exit 0
